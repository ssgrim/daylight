# Development Database Environment Configuration
# Issue #111 - Environment variables for development database setup

# ===== Core Configuration =====
NODE_ENV=development
DATABASE_PRIMARY=dynamodb
ENABLE_MULTI_DB=true
CONNECTION_POOLING=true

# ===== AWS Configuration (Local DynamoDB) =====
AWS_REGION=us-east-1
DYNAMODB_ENDPOINT=http://localhost:8000
AWS_ACCESS_KEY_ID=dummy_key
AWS_SECRET_ACCESS_KEY=dummy_secret
DYNAMODB_MAX_RETRIES=3
DYNAMODB_RETRY_BASE=100

# ===== Database Replication (Disabled for Development) =====
DB_REPLICATION_ENABLED=false
DB_READ_REPLICAS=0
DB_CROSS_REGION_REPLICATION=false

# ===== Backup Configuration (Minimal for Development) =====
DB_PITR_ENABLED=false
DB_CONTINUOUS_BACKUP=false
DB_BACKUP_RETENTION_DAYS=7
DB_CROSS_REGION_BACKUP=false

# ===== Monitoring & Performance =====
DB_METRICS_ENABLED=true
DB_METRICS_INTERVAL=60
DB_METRICS_RETENTION=7
DB_SLOW_QUERY_LOG=true
DB_PERFORMANCE_INSIGHTS=false
DB_CLOUDWATCH_INTEGRATION=false

# ===== Performance Thresholds (Relaxed for Development) =====
DB_CONN_THRESHOLD=0.9
DB_LATENCY_THRESHOLD=2000
DB_ERROR_THRESHOLD=0.1
DB_DISK_THRESHOLD=0.9
DB_CPU_THRESHOLD=0.9

# ===== Security & Encryption (Disabled for Development) =====
DB_ENCRYPTION_AT_REST=false
DB_ENCRYPTION_IN_TRANSIT=false
DB_KEY_ROTATION=false
DB_IAM_AUTH=false
DB_VPC_ENABLED=false
DB_NETWORK_ISOLATION=false

# ===== Alerting Configuration (Disabled for Development) =====
DB_ALERTS_ENABLED=false

# ===== Caching Configuration =====
REDIS_ENABLED=false
APP_CACHE_SIZE=100
APP_CACHE_TTL=300

# ===== Database Optimization =====
DB_BATCH_SIZE=25
DB_PARALLEL_READS=3
DB_CONNECTION_TIMEOUT=10000
DB_QUERY_TIMEOUT=10000
DB_AUTO_INDEX=true
DB_BACKGROUND_INDEX=true
DB_COMPACT_THRESHOLD=0.5
DB_ANALYZE_FREQUENCY=weekly

# ===== Logging Configuration =====
DB_LOG_LEVEL=debug
DB_STRUCTURED_LOGGING=false
DB_LOG_AGGREGATION=false
DB_LOG_RETENTION=7

# ===== Migration Configuration =====
MIGRATION_LOCK_TIMEOUT=60
AUTO_ROLLBACK=true
ROLLBACK_HEALTH_CHECK=false
ROLLBACK_TIMEOUT=120

# ===== Legacy Migration =====
MIGRATE_FROM_SQLITE=true
